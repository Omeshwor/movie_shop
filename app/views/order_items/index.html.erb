<h2>Current Cart<h2>

<table>
  <thead>
    <tr>
      <td>Product Title</td>
      <td>Product Price</td>
      <td>Product Quantity</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= number_to_currency item.price %></td>
        <td><%= item.quantity %>
        <td>
          <%= form_for item, method: :delete do |f| %>
            <%= f.submit "Remove" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <td colspan="4" align="right">
      <%= number_to_currency current_cart.net_amount %>
    </td>
  </tfoot>
</table>
