<div class="container">
	<h1 align="center" class="header">Listing all movies</h1>
	<div class="row row-cols-1 row-cols-md-3">
		<% @products.each do |product| %>
		  <div class="col mb-4 border-info">
		    <div class="card border-info">
		      <!-- <img src="..." class="card-img-top" alt="..."> -->
		      <div class="card-body">
		        <h5 class="card-title"><%= link_to product.title, product %></h5>
		        <p class="card-text"><%= truncate(product.description, :length => 50) %>
		        	<span class="small"><%= link_to "read more", product %></span></p>
		      </div>
		    </div>
		  </div>
		<% end %>
	</div>
</div>
