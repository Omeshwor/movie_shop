<div class="container">
	<div class="card">
	  <div class="card-body">
	    <h5 class="card-title row">
	    	<div class="col-2">Product:</div>
	    	<div class="col-8"><%= @product.title %></div>
	    </h5>
	    <div class="row">
	    	<div class="col-2">Description:</div>
	    	<div class="col-10"><%= @product.description %></div>
	    </div>
	    <div class="row">
	    	<div class="col-2">Actor:</div>
	    	<div class="col-10"><%= @product.actor %></div>
	    </div>
	    <div class="row">
	    	<div class="col-2">Regular price:</div>
	    	<div class="col-8"><%= @product.price %></div>
	    </div>
	    <div class="row">
	    	<div class="col-2">Special price:</div>
	    	<div class="col-8"><%= @product.special %></div>
	    </div>
	    <div class="row">
	    	<div class="col-2">CPI:</div>
	    	<div class="col-8"><%= @product.common_product_id %></div>
	    </div>
	    <hr>
	    <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-info" %>
	    <%= link_to "Delete this product", product_path(@product), class: "btn btn-danger",
	    			method: :delete, data: { confirm: "Are you sure ?"} %>
	  </div>
	</div>
</div>