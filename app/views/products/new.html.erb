<div class="container">
	<h3 align="center" class="header">Add New Product</h3>
	<div class="form-group">
		<%= simple_form_for @product do |f| %>
			<%= f.error_notification %>
			<%= f.input :title %>
			<%= f.input :description %>
			<%= f.input :actor %>
			<%= f.input :price %>
			<%= f.input :special %>
			<%= f.input :common_product_id %>
			<%= f.button :submit, class: "btn-primary" %>
		<% end %>
	</div>
</div>