<h2>Current Cart<h2>

<table>
  <thead>
    <tr>
      <td>Product Title</td>
      <td>Product Price</td>
      <td>Product Quantity</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
    <% @orderlines.each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= number_to_currency item.product.special ? item.product.special : item.product.price %></td>
        <td><%= item.quantity %>
        <td>
          <%= form_for item, method: :delete do |f| %>
            <%= f.submit "Remove" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
