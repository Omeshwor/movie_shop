<div class="form-group">
	<%= simple_form_for @inventory do |f| %>
		<%= f.error_notification %>
		<%= f.input :product_id, collection: Product.all, label_method: :title, value_method: :id, include_blank: false %>
		<%= f.input :quantity_in_stock %>
		<%= f.input :sales %>
		<%= f.button :submit, class: "btn-primary" %>
	<% end %>
</div>